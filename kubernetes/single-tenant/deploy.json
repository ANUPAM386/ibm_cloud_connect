{
    "kind": "PersistentVolume",
    "apiVersion": "v1",
    "metadata": {
        "name": "recordings",
        "labels": {}
    },
    "spec": {
        "capacity": {
            "storage": "2Gi"
        },
        "accessModes": [
            "ReadWriteMany"
        ],
        "persistentVolumeReclaimPolicy": "Retain",
        "hostPath": {
            "path": "/root/recordings"
        }
    }
}

{
    "kind": "PersistentVolumeClaim",
    "apiVersion": "v1",
    "metadata": {
        "name": "recordings"
    },
    "spec": {
        "resources": {
            "requests": {
                "storage": "2Gi"
            }
        },
        "accessModes": [
            "ReadWriteMany"
        ]
    }
}

{
    "kind": "Deployment",
    "apiVersion": "extensions/v1beta1",
    "metadata": {
        "name": "vgw",
        "labels": {
            "service": "vgw"
        }
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "matchLabels": {
                "service": "vgw"
            }
        },
        "template": {
            "metadata": {
                "labels": {
                    "service": "vgw"
                }
            },
            "spec": {
                "volumes": [
                    {
                        "persistentVolumeClaim": {
                            "claimName": "recordings"
                        },
                        "name": "recordings"
                    }
                ],
                "hostNetwork": true,
                "containers": [
                    {
                        "name": "vgw-media-relay",
                        "image": "ibmcom/voice-gateway-mr:latest",
                        "ports": [
                            {
                                "containerPort": 8080,
                                "hostPort": 8080,
                                "protocol": "TCP"
                            }
                        ],
                        "lifecycle": {
                            "preStop": {
                                "exec": {
                                    "command": [
                                        "/opt/quiesce.sh"
                                    ]
                                }
                            }
                        },
                        "env": [
                            {
                                "name": "SDP_ADDRESS",
                                "valueFrom": {
                                    "fieldRef": {
                                        "fieldPath": "status.podIP"
                                    }
                                }
                            },
                            {
                                "name": "ENABLE_RECORDING",
                                "value": "false"
                            },
                            {
                                "name": "RTP_UDP_PORT_RANGE",
                                "value": "16384-16394"
                            },
                            {
                                "name": "CLUSTER_WORKERS",
                                "value": "0"
                            },
                            {
                                "name": "MEDIA_RELAY_LOG_LEVEL",
                                "value": "DEBUG"
                            },
                            {
                                "name": "MEDIA_RELAY_WS_PORT",
                                "value": "8080"
                            },
                            {
                                "name": "WATSON_STT_USERNAME",
                                "value": ""
                            },
                            {
                                "name": "WATSON_STT_PASSWORD",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "name": "secret-creds",
                                        "key": "WATSON_STT_PASSWORD"
                                    }
                                }
                            },
                            {
                                "name": "WATSON_STT_URL",
                                "value": "https://stream.watsonplatform.net/speech-to-text/api"
                            },
                            {
                                "name": "WATSON_TTS_USERNAME",
                                "value": ""
                            },
                            {
                                "name": "WATSON_TTS_PASSWORD",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "name": "secret-creds",
                                        "key": "WATSON_TTS_PASSWORD"
                                    }
                                }
                            },
                            {
                                "name": "WATSON_TTS_VOICE",
                                "value": "en-US_MichaelVoice"
                            },
                            {
                                "name": "WATSON_TTS_URL",
                                "value": "https://stream.watsonplatform.net/text-to-speech/api"
                            }
                        ],
                        "volumeMounts": [
                            {
                                "name": "recordings",
                                "mountPath": "/vgw-media-relay/recordings"
                            }
                        ],
                        "terminationMessagePath": "/dev/termination-log",
                        "imagePullPolicy": "Always"
                    },
                    {
                        "name": "vgw-sip-orchestrator",
                        "image": "ibmcom/voice-gateway-so:latest",
                        "ports": [
                            {
                                "containerPort": 5060,
                                "hostPort": 5060,
                                "protocol": "TCP"
                            },
                            {
                                "containerPort": 5060,
                                "hostPort": 5060,
                                "protocol": "UDP"
                            }
                        ],
                        "lifecycle": {
                            "preStop": {
                                "exec": {
                                    "command": [
                                        "/opt/quiesce.sh"
                                    ]
                                }
                            }
                        },
                        "env": [
                            {
                                "name": "SIP_HOST",
                                "valueFrom": {
                                    "fieldRef": {
                                        "fieldPath": "status.podIP"
                                    }
                                }
                            },
                            {
                                "name": "MEDIA_RELAY_HOST",
                                "value": "localhost:8080"
                            },
                            {
                                "name": "SIP_PORT",
                                "value": "5060"
                            },
                            {
                                "name": "HTTPS_PORT",
                                "value": "9443"
                            },
                            {
                                 "name": "HTTP_HOST",
                                 "value": "127.0.0.1"
                            },
                            {
                                "name": "WATSON_CONVERSATION_WORKSPACE_ID",
                                "value": ""
                            },
                            {
                                "name": "WATSON_CONVERSATION_USERNAME",
                                "value": ""
                            },
                            {
                                "name": "WATSON_CONVERSATION_PASSWORD",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "name": "secret-creds",
                                        "key": "WATSON_CONVERSATION_PASSWORD"
                                    }
                                }
                            },
                            {
                                "name": "WATSON_CONVERSATION_URL",
                                "value": "https://gateway.watsonplatform.net/conversation/api"
                            },
                            {
                                "name": "ENABLE_AUDIT_MESSAGES",
                                "value": "true"
                            },
                            {
                                "name": "ENABLE_TRANSCRIPTION_AUDIT_MESSAGES",
                                "value": "true"
                            },
                            {
                                "name": "LOG_LEVEL",
                                "value": "all"
                            }
                        ],
                        "terminationMessagePath": "/dev/termination-log",
                        "imagePullPolicy": "Always"
                    }

                ],
                "restartPolicy": "Always",
                "terminationGracePeriodSeconds": 600,
                "dnsPolicy": "ClusterFirst"
            }
        }
    },
    "status": {}
}
